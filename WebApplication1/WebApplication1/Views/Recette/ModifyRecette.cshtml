@{
}
@model Recette;



<h2>Modification</h2>
<div>
    
    <strong>@Model.Title</strong>
    <p>@Model.Title</p>
    <p>@Model.Description</p>
    <p>@Model.Instructions</p>


    <form asp-action="ModifyRecette" method="post">
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title" />
            <span asp-validation-for="Title"></span>
        </div>
        <div>
            <label asp-for="Category"></label>
            <input asp-for="Category" />
            <span asp-validation-for="Category"></span>
        </div>
        <div>
            <label asp-for="Description" ></label>
            <input asp-for="Description" class=" SizedBox" />
            <span asp-validation-for="Description"></span>
        </div>
        <div>
            <label asp-for="Instructions"></label>
            <input asp-for="Instructions" class=" SizedBox" />
            <span asp-validation-for="Instructions"></span>
        </div>
        <div>
            <label asp-for="Author"></label>
            <input asp-for="Author" />
            <span asp-validation-for="Author"></span>
        </div>
        <button type="submit">Envoyer</button>
    </form>




</div>




    
