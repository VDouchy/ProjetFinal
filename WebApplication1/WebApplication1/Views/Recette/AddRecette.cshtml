@{
}
@model Recette
<div asp-validation-summary="All" class="text-danger"></div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ajouter etudiant</title>
</head>
<body>
    <a asp-controller="Accueil" asp-action="Index">Retour à l'accueil</a>
    <form asp-action="AddRecette" method="post">
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title" />
            <span asp-validation-for="Title"></span>
        </div>
        <div>
            <label asp-for="Category"></label>
            <input asp-for="Category" />
            <span asp-validation-for="Category"></span>
        </div>
        <div>
            <label asp-for="Description"></label>
            <input asp-for="Description" />
            <span asp-validation-for="Description"></span>
        </div>
        <div>
            <label asp-for="Instructions"></label>
            <input asp-for="Instructions"/>
            <span asp-validation-for="Instructions"></span>
        </div>
        <div>
            <label asp-for="Author"></label>
            <input asp-for="Author"/>
            <span asp-validation-for="Author"></span>
        </div>

        
      

        <button type="submit">Envoyer</button>
    </form>

</body>
</html>
